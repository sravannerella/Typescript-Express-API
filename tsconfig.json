{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"removeComments": true,
		"lib": [
			"dom",
			"es2017"
		],
		"outDir": "dist",
		"strict": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"src/**/*"
	]
}